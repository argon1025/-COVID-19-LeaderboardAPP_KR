<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/loadingview" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TotalCaseText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="국내 확진자  "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TotalCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업데이트 중입니다."
                android:textColor="#03A9F4"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TotalRecoveredText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="국내 완치자  "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TotalRecovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업데이트 중입니다."
                android:textColor="#03A9F4"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TotalDeathText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="국내 사망자  "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TotalDeath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업데이트 중입니다."
                android:textColor="#FF5722"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/NowCaseText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="국내 격리자  "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/NowCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업데이트 중입니다."
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TodayRecoveredText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 하루 완치자  "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TodayRecovered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업데이트 중입니다."
                android:textColor="#03A9F4"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TodayDeathText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 하루 사망자  "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TodayDeath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업데이트 중입니다."
                android:textColor="#F44336"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TotalCaseBeforeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전날 대비 환자수  "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TotalCaseBefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업데이트 중입니다."
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/updateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="받아온 정보가 없습니다."
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>